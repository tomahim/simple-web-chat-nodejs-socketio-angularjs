html(ng-app="tchat")
	head
		title= "Real time web chat"
		link(rel='stylesheet', href='/css/styles.css')
		script(src='/js/angular/angular.min.js')
		script(src='/js/app.js')
		script(src='/js/controllers.js')
		script(src='/js/services.js')
		script(src='/socket.io/socket.io.js')
	body(ng-controller='TchatCtrl')
		#content
			div(ng-repeat="msg in messages") {{msg}}
		.controls
			input#field(ng-model='message')
			input#send(type='button', value='Envoyer', ng-click='sendMessage()')
		#users
			div(ng-repeat="user in users") {{user}}